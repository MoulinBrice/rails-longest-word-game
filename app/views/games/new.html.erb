<div class="container mt-4">
    <h1>New game</h1>
    <div class="container d-flex">
        <%@letters.each do |letter|%>
            <div class="show-letter"><%=letter%></div>
        <%end%>
    </div>

    <div class="formulaire">
         <form action="score" method="post" data-turbo="false">
           <label for="word">Faites une proposition de mot avec les lettres</label>
            <input type="text" id="word" name="word" required size="10">
            <input id="letters" name="letters" type="hidden" value=<%=@letters.join("")%>>
            <input type="submit" value="Play">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
         </form>
    </div>
    <%= link_to "Play again", "new" %>
</div>
